		script(src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js')
body
	#wrap
		.navbar.navbar-default.navbar-fixed-top(role='navigation')
			.container
				.navbar-header
					button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#') Random taskbar
				.collapse.navbar-collapse
					ul.nav.navbar-nav
						li.active
							a(href='#') Will
						li
							a(href='#about') Update
						li
							a(href='#contact') This
						li.dropdown
							a.dropdown-toggle(href='#', data-toggle='dropdown')
								| Later
								b.caret
							ul.dropdown-menu
								li
									a(href='#') Because
								li
									a(href='#') I
								li
									a(href='#') Just
								li.divider
								li.dropdown-header Took it
								li
									a(href='#') from
								li
									a(href='#') Twitter
				//
					/.nav-collapse
		.container
			//
				taken from bootstrap templates because I'm lazy !
			.welcome
				h1 Welcome to Avalon, #{player.name}!
				h5 (name subject to change)
				h2 Tables
				#tables
					if games_started
						p Games Started
				form.form-inline(action='/m/create', method='post')
					.form-group
						.input-group(style='width: 130px;')
							span.input-group-btn
								button.btn.btn-default(type='submit') Create Game!
		//
			/.container
		#footer
			.container
				p.text-muted.credit
					| Powered by
					a(href='http://getbootstrap.com/') Bootstrap
					| and
					a(href='http://nodejs.org/') Node.js
					| and some other stuff.
	//
		Placed at the end of the document so the pages load faster
	script(src='//code.jquery.com/jquery-1.10.2.min.js')
	script(src='//code.jquery.com/ui/1.10.3/jquery-ui.js')
	script(src='./js/bootstrap.min.js')
	script(src='./js/gamelobby.js')